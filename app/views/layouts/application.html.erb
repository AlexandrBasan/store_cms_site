<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta content="<%= I18n.t 'content.tags'[0..244] %>" name="keywords" />
    <meta name="author" content="Alexandr Basan" />
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
    <%= favicon_link_tag 'teleport_16_16_0.png' %>
    <script type="text/javascript">
        $(document).ready(function(){
            $("#myCarousel").carousel({
                interval : 5000,
                pause: false
            });
        });
    </script>
    <!--Google Analytics-->

    <!--Google Analytics-->
    <!-- Google maps -->
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
    <%= javascript_include_tag "google_maps" %>
    <!-- Google maps -->
    <%= javascript_include_tag "highcharts" %>
    <%= yield(:head) %>
  </head>
  <body onload="initialize(), setMarkers()">
    <%= render 'layouts/header' %>
    <%= content = yield %>
    <!--Back To Top Button-->
    <% if content.length > 1200 %>
      <%= link_to("#top") do %>
          <div id="backtotop" style="display: block;">
          </div>
      <% end %>
  <% end %>
  <!-- Words -->
  <% if request.url.include?('blog') %>
  <% else %>
      <p></p>
      <div class="container text-justify" style="color: #999999;" id="delivery_for_all_companies" name="delivery_for_all_companies">
        <%= t ('content.tags_view') %>
      </div>
  <% end %>
  <% if current_user.try(:admin?) %>
      <%= render 'layouts/admin' %>
  <% else %>
  <% end %>
      <div class="container">
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
      </div>

  <!-- Код тега ремаркетинга Google -->

  <!-- Код тега ремаркетинга Google -->
  </body>
</html>